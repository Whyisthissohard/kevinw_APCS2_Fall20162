


public class Hourglass {

	public static void main(String[] args) {
		printBase(); //Print the firstline
		topHalf(); //Print the top half
		System.out.println("     ||");
		bottomHalf();
		printBase();
	}

	public static void topHalf(){
		for (int i=1; i <=4; i++){//print each line
			//print spaces
			for (int j=1; j<=i; j++){
				System.out.print(" ");
			}
			System.out.print("\\");
			for (int k=5; k>i; k--) { 
				System.out.print("::");
			}
			for(int j=1; j>i; j++);
			System.out.println("/");
		}
	}

	public static void printBase(){
		System.out.print("|");
		for (int i = 1; i<=10;i++){
			System.out.print("\"");
		}
		System.out.println("|");
	}
	public static void bottomHalf(){
		for (int i=4; i >=1; i--){//print each line
		
			for (int j=1; j<=i; j++){
				System.out.print(" ");
			}
			System.out.print("/");
			int j = 1;
			for (int k=5; k<1 ; k++) { 
				System.out.print("::");
			}
			for(j=1; j<i; j--);
			System.out.println("\\");
		}
	}
}